  #   set -x
  #   rm -rf build
  #   mkdir build
  #   bun build --target browser src/html.mts --outfile build/html.mjs
  #   set +x
  #   tree build
  #   ;;
  #
  # "build test")
  #   set -x
  #   rm -rf build
  #   mkdir build
  #   bun build --target browser spec/test.js --outdir build
  #   ;;
